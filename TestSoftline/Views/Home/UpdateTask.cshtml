@model TestSoftline.Models.Tasks;

@{
    ViewData["Title"] = "UpdateTask";
}

<form asp-action="UpdateTask" asp-antiforgery="true" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.TasksId"/>
    <div class="form-group row">
        <div class="col-4">
            <label asp-for="TaskName">Название</label>
        </div>
        <div class="col-8">
            <input type="text" asp-for="TaskName" class="form-control" required>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4">
            <label asp-for="Description">Описание</label>
        </div>
        <div class="col-8">
            <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
        </div>
