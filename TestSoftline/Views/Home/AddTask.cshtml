@model TestSoftline.Models.Tasks;

@{
    ViewData["Title"] = "AddTask";
}

<form asp-action="AddTask" asp-antiforgery="true" enctype="multipart/form-data">
    <div class="form-group row">
        <div class="col-4">
            <label asp-for="TaskName">Название</label>
        </div>
        <div class="col-8">
            <input type="text" asp-for="TaskName" class="form-control" required>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4">
            <label asp-for="Description">Описание</label>
        </div>
        <div class="col-8">
            <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
        </div>
        <div class="col-sm-10">
        <select asp-for="StatusId">
                <option value="0">Создана</option>
                <option value="1">В работе</option>
                <option value="2">Завершена</option>
        </select>
        </div>
        <div class="text-right">
            <button type="submit" class="btn btn-info">Добавить</button>
        </div>
    </div>
</form>